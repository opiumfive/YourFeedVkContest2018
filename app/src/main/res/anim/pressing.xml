<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:interpolator="@android:anim/accelerate_interpolator">

    <scale android:pivotX="50%" android:pivotY="50%"
           android:fromXScale="1.0" android:toXScale="1.1"
           android:fromYScale="1.0" android:toYScale="1.1"
           android:duration="100"/>

    <scale android:pivotX="50%" android:pivotY="50%"
           android:fromXScale="1.1" android:toXScale="1.0"
           android:fromYScale="1.1" android:toYScale="1.0"
           android:duration="100"
           android:startOffset="100"/>
</set>